<h1 class="text-center">Eat your Burguers!</h1>

<h2 style="padding: 5%">Menu</h2>

<div class="row">

  <div class="col-6 menu">
    <h3>Burguers!</h3>
      <ul>
        {{#each burguers}}
          {{#unless this.devoured}}
            <li style="padding: 1%"><button class="btn btn-danger eat" data-id="{{this.id}}">Eat!</button>  {{this.name}}</li>
          {{/unless}}
        {{/each}}
      </ul>
  </div>

  <div class="col-5 eaten" style="margin: 2px">
    <h2>Eaten Burguers!</h2>

    <ul>
      {{#each burguers}}
        {{#if this.devoured}}
          <li class="devoured">{{this.name}}</li>
        {{/if}}
      {{/each}}
    </ul>

  </div>
</div>


<h2>Expand our menu!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">name</label>
    <input type="text" id="newBurguer" name="name">
  </div>

  <button type="submit" class="new btn btn-info">Add burguer</button>
</form>

